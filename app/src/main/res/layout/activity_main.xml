<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/smaps">

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" ></Space>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   SungKyul Maps"
        android:textColor="@color/black"
        android:textSize="50dp"

        ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>


        >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnMap"
                android:layout_width="143dp"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10sp"
                android:background="#00000000"
                android:drawableLeft="@drawable/mops"
                android:padding="5px"
                android:text="지도보기"
                android:textColor="#5bb435"></Button>

            <Button
                android:id="@+id/btnInfo"
                android:layout_width="143dp"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10sp"
                android:background="#00000000"
                android:drawableLeft="@drawable/buildong"
                android:padding="5px"
                android:text="건물정보"
                android:textColor="#5bb435"></Button>

            <Button
                android:id="@+id/btnImprovements"
                android:layout_width="143dp"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10sp"
                android:background="#00000000"
                android:drawableLeft="@drawable/usor"
                android:padding="5px"
                android:text="개선사항"
                android:textColor="#5bb435"></Button>

        </LinearLayout>


        ></LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"></Space>

</LinearLayout>